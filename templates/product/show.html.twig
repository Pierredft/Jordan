{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Jordan Collection{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/productShow.css') }}">
{% endblock %}

{% block body %}
<div class="product-container">
    <div class="product-layout">
        <!-- Section Image -->
        <div class="product-image-section">
            <img src="{{ product.picture }}" alt="{{ product.name }}" class="product-image">
        </div>

        <!-- Section Détails -->
        <div class="product-details-section">
            <h1 class="product-title">{{ product.name }}</h1>
            <p class="product-description">{{ product.description }}</p>

            <!-- Section Prix -->
            <div class="price-section">
                {% if product.sales == 1 %}
                    <div class="price-label">Prix Original</div>
                    <div class="price-value original-price">{{ product.price }}€</div>
                    <div class="price-label">Prix Promo</div>
                    <div class="price-value sale-price">{{ product.salePrice }}€</div>
                {% else %}
                    <div class="price-label">Prix</div>
                    <div class="price-value">{{ product.price }}€</div>
                {% endif %}
            </div>

            <!-- Section Quantité -->
            <div class="quantity-section">
                <div class="quantity-label">Quantité</div>
                <div class="quantity-controls">
                    <button type="button" id="decrement" class="quantity-btn">−</button>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-input">
                    <button type="button" id="increment" class="quantity-btn">+</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Lien de retour -->
    <a href="{{ path('app_product_index') }}" class="back-link">Retour à la liste</a>
</div>


{% endblock %}
